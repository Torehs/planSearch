<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    class="com.google.android.gms.maps.MapFragment"
    android:background="@drawable/woods"
    android:gravity="top"
    tools:context=".MainActivity" >
                
    <Button
        android:id="@+id/create"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/join"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:text="Create operation"
        android:onClick="createClick"  />

    <Button
        android:id="@+id/join"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/create"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="180dp"
        android:onClick="joinClick"
        android:text="Join operation" />

</RelativeLayout>



